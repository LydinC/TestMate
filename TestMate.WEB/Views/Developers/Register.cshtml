@model TestMate.Common.DataTransferObjects.Developers.DeveloperRegisterDTO

@{
    ViewData["Title"] = "Register Developer";
}

<h1>Sign Up</h1>

<h4>Developer Registration Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-style">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group form-style">
                <label asp-for="MiddleName" class="control-label">Middle Name</label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group form-style">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group form-style">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-style">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group form-style">
                <label asp-for="Password" class="control-label">Password</label>
                <input type="password" asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <div class="form-group form-style">
                    <input type="submit" value="Sign Up" class="btn btn-primary" asp-action="Register" />
                </div>
                <div class="form-group form-style">
                    <a asp-controller="Home" asp-action="Login">Already have an account?</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (@TempData["Success"] != null)
{
    <div class="alert-success form-style">
        <p>@TempData["Success"]</p>
    </div>  
}
@if (@TempData["Error"] != null)
{
    <div class="error-message form-style">
        <p>@TempData["Error"]</p>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
