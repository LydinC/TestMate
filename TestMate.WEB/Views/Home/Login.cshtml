@model TestMate.Common.DataTransferObjects.Developers.DeveloperLoginDTO
@{
    ViewData["Title"] = "Login";
}

<h1>Welcome to the TestMate Developer Portal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-style">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter Username" required/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group form-style">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group btn-group form-style">
                <input type="submit" value="Log In" class="btn btn-primary" asp-controller="Developers" asp-action="Login" />
                <a value="Sign Up" class="btn btn-primary btn-light" asp-controller="Developers" asp-action="Register"> Sign Up </a> 
            </div>
        </form>

       
        @if (@TempData["Error"] != null)
        {
            <div class="alert-danger form-style">
                <p>@TempData["Error"]</p>
            </div>
        }
        
