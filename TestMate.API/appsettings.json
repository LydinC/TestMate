{
  "JWTAuthentication": {
    "SecretKey": "thisisalongkeyforjwtauthentication",
    "Issuer": "issuer",
    "Audience": "audience"
  },
  "TestFrameworkDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "testframework_db",
    "UsersCollectionName": "Users",
    "DevicesCollectionName": "Devices",
    "DevelopersCollectionName": "Developers",
    "TestRequestsCollectionName": "TestRequests"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/APILog-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "MinimumLevel": "Information",
    "Properties": {
      "ApplicationName": "TestMate.API"
    }
  },
  "AllowedHosts": "*"
}
